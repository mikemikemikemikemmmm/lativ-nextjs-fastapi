[Unit]
Description=Monitor Service
After=backend-admin.service backend-guest.service

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/fastapi/monitor
ExecStart=/home/ubuntu/.local/bin/uv run main.py --host 127.0.0.1 --port 8000
Restart=no
Environment="ENVIRONMENT=prod"
Environment="PYTHONUNBUFFERED=1"
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target