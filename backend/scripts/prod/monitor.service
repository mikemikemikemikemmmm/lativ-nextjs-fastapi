[Unit]
Description=Monitor Service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/fastapi/backend
ExecStart=/home/ubuntu/.local/bin/uv run ./scripts/prod/monitor.py --host 127.0.0.1 --port 8001 --log-level info
Restart=no
Environment="ENVIRONMENT=prod"
Environment="PYTHONUNBUFFERED=1"
StandardOutput=file:/home/ubuntu/fastapi/systemctl-logs/monitor-out.log
StandardError=file:/home/ubuntu/fastapi/systemctl-logs/monitor-err.log

[Install]
WantedBy=multi-user.target