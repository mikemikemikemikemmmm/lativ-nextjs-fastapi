[Unit]
Description=FastAPI Service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/youruser/fastapi/backend
Environment="ENVIRONMENT=prod"
EnvironmentFile=/home/ubuntu/fastapi/backend/.env.prod
ExecStart=uv run uvicorn src.main:app --host 0.0.0.0 --port 8000
Restart=no

[Install]
WantedBy=multi-user.target